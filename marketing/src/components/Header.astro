    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>

<script>
  // Enhanced client-side JavaScript for mobile menu toggle with animations
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const burgerIcon = menuButton?.querySelector('.burger-icon');
    const burgerLines = burgerIcon?.querySelectorAll('span');
    let isOpen = false;
    
    if (menuButton && mobileMenu && burgerLines?.length === 3) {
      menuButton.addEventListener('click', () => {
        isOpen = !isOpen;
        
        // Animate burger to X
        if (isOpen) {
          burgerLines[0].classList.add('rotate-45', 'translate-y-1.5');
          burgerLines[1].classList.add('opacity-0');
          burgerLines[2].classList.add('-rotate-45', '-translate-y-1.5');
          mobileMenu.classList.remove('translate-x-full');
          document.body.classList.add('overflow-hidden');
          menuButton.setAttribute('aria-expanded', 'true');
        } else {
          burgerLines[0].classList.remove('rotate-45', 'translate-y-1.5');
          burgerLines[1].classList.remove('opacity-0');
          burgerLines[2].classList.remove('-rotate-45', '-translate-y-1.5');
          mobileMenu.classList.add('translate-x-full');
          document.body.classList.remove('overflow-hidden');
          menuButton.setAttribute('aria-expanded', 'false');
        }
      });
    }
    
    // Add scroll behavior for sticky header
    const header = document.querySelector('header');
    let lastScrollTop = 0;
    
    window.addEventListener('scroll', () => {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      
      if (scrollTop > lastScrollTop && scrollTop > 80) {
        // Scrolling down & past the header height
        header?.classList.add('transform', '-translate-y-full');
      } else {
        // Scrolling up
        header?.classList.remove('transform', '-translate-y-full');
      }
      
      lastScrollTop = scrollTop;
    });
  });
</script>
