    to {
      opacity: 1;
      filter: blur(0px);
    }
  }

  .review-card:nth-child(1) { animation-delay: 0.1s; }
  .review-card:nth-child(2) { animation-delay: 0.2s; }
  .review-card:nth-child(3) { animation-delay: 0.3s; }
  .review-card:nth-child(4) { animation-delay: 0.4s; }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggleButton = document.getElementById('toggle-button') as HTMLButtonElement | null;
    const reviewsContainer = document.getElementById('reviews-container') as HTMLElement | null;
    const gradientOverlay = document.getElementById('gradient-overlay') as HTMLElement | null;
    let isOpen = false;

    function updateResponsiveLayout() {
      const isMobile = window.innerWidth <= 768;
      const centerColumn = document.querySelector('.reviews-column:nth-child(2)') as HTMLElement | null;
      const rightColumn = document.querySelector('.reviews-column:nth-child(3)') as HTMLElement | null;
      
      if (isMobile) {
        // Hide center and right columns on mobile
        if (centerColumn) centerColumn.style.display = 'none';
        if (rightColumn) rightColumn.style.display = 'none';
      } else {
        // Show all columns on desktop
        if (centerColumn) centerColumn.style.display = 'block';
        if (rightColumn) rightColumn.style.display = 'block';
      }
    }

    function toggleReviews() {
      isOpen = !isOpen;
      
      if (reviewsContainer && gradientOverlay && toggleButton) {
        if (isOpen) {
          reviewsContainer.style.height = 'fit-content';
          gradientOverlay.style.top = '100%';
          toggleButton.textContent = 'View less';
        } else {
          reviewsContainer.style.height = '400px';
          gradientOverlay.style.top = '0%';
          toggleButton.textContent = 'View more';
        }
      }
    }

    if (toggleButton) {
      toggleButton.addEventListener('click', toggleReviews);
    }
    window.addEventListener('resize', updateResponsiveLayout);
    
    // Initial setup
    updateResponsiveLayout();
  });
</script>
